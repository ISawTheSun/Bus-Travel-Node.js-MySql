	</div>
	
	</div>
	
	</div>
	
	<div><h3 class="pageTitle">Buses</h3></div>
	<div class="titleTextCont"><p class="titleText">Lorem ipsum dolor sit amet, consectetuer adipiscing elit. 
	Aenean commodo ligula eget dolor</p></div>
		
	<div class="titleButton"><button class="navigateButtonSelected" type="button" onclick="window.location.href = '#top';">go to table</button>
	
	
  </div>  
  
 </div>
  
  
  
  
  <div class="main" id="top">
  
	<table>
	<tr>
		<th>Id</th>
		<th>Nazwa</th> 
		<th>Ilość miejsc</th>
		<th>Numer rejestracyjny</th>
		<th>Data zakupu</th> 
		<th>Przebieg</th> 
		<th>Szcegóły</th>
	</tr>
	<% busList.forEach(function(bus){ %>
	<tr>
		<td><%= bus.id %></td>
		<td><%= bus.name %></td> 
		<td><%= bus.seats %></td>
		<td><%= bus.number %></td>
		<td><%= bus.date.getFullYear() %>-<%= ("0" + (bus.date.getMonth() + 1)).slice(-2) %>-<%= ("0" + bus.date.getDate()).slice(-2) %></td> 
		<td><%= bus.mileage %></td> 
		<td>
		
			<button type="button" 
			class="tableButton" 
			onclick="window.location.href = '/buses/showDetails?bus_id=<%= bus.id %>'">
			Pokaż szcegóły</button>
		
			<button type="button" 
			class="tableButton" 
			onclick="window.location.href = '/buses/showEditForm?bus_id=<%= bus.id %>'">
			Edytuj</button> 
			
			<button type="button" 
			class="tableButton" 
			onclick="confirmDelete('<%= bus.id %>')">
			Usuń</button> 
			
		</td>
	</tr>
	
	<% }) %>
	
	</table>
	
	<script>
	function confirmDelete(id){
	
		if(confirm("Czy napewno chcesz usunąć ten autobus?")){
			window.location.href = "/buses/delete?bus_id="+id;
		}
	
	}
	
	</script>
	
	<div class="bottomSection">
		<button type="button" class="tableButtonSelected" onclick="window.location.href = '/buses/showNewForm'">Dodaj nowy rekord</button>
	</div>
	
	
  </div>
  
  
  
  
  
