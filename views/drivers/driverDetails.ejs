		</div>  
		
		</div>
		
		<div><h3 class="pageTitle">Schedule</h3></div>
		<div class="titleTextCont"><p class="titleText">Lorem ipsum dolor sit amet, consectetuer adipiscing elit. 
		Aenean commodo ligula eget dolor</p></div>
		
		<div class="titleButton"><button class="navigateButtonSelected" type="button" onclick="window.location.href = '#top';">go to table</button>
		
	</div>
  </div>


  
  <div class="main" id="top">
  
	<table>
	<tr>
		<th>Id</th>
		<th>Z</th> 
		<th>Do</th>
		<th>Data wyjazdu</th>
		<th>Data przyjazdu</th> 
		<th>Szcegóły</th>
	</tr>
	<% scheduleList.forEach(function(schedule){ %>
	<tr>
		<td><%= schedule.id %></td>
		
		<% cityList.forEach(function(city){ %>
		
		<% if (city.id == schedule.cityFrom) { %>
			<td> <%= city.cityName %> </td> 
		<% } %>
		
		<% }) %>
		
		<% cityList.forEach(function(city){ %>
		
		<% if (city.id == schedule.cityTo) { %>
			<td> <%= city.cityName %> </td> 
		<% } %>
		
		<% }) %>
		
		<td><%= schedule.departure.getFullYear() %>-<%= ("0" + (schedule.departure.getMonth() + 1)).slice(-2) %>-<%= ("0" + schedule.departure.getDate()).slice(-2) %></td>
		<td><%= schedule.arrival.getFullYear() %>-<%= ("0" + (schedule.arrival.getMonth() + 1)).slice(-2) %>-<%= ("0" + schedule.arrival.getDate()).slice(-2) %></td> 
		<td>
			<button type="button" 
			class="tableButton" 
			onclick="window.location.href = '/schedules/showDetails?schedule_id=<%= schedule.id %>'">
			Pokaż szcegóły</button>
	
			<button type="button" 
			class="tableButton" 
			onclick="window.location.href = '/schedules/showEditForm?schedule_id=<%= schedule.id %>'">
			Edytuj</button> 
			
			<button type="button" 
			class="tableButton" 
			onclick="confirmDelete('<%= schedule.id %>')">
			Usuń</button> 
			
		</td>
	</tr>
	
	<% }) %>
	
	</table>
	
	<script>
	function confirmDelete(id){
	
		if(confirm("Czy napewno chcesz usunąć ten rekord?")){
			window.location.href = "/schedules/delete?schedule_id="+id;
		}
	
	}
	
	</script>
	
	<div class="bottomSection">
		<button type="button" class="tableButtonSelected" onclick="window.location.href = '/drivers'">Powrót</button>
	</div>
	
	
  </div>
  
  
  
  
  
